<Application xmlns="https://github.com/avaloniaui"
			 xmlns:sty="using:FluentAvalonia.Styling"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="mclPlus.App"
			 RequestedThemeVariant="Light">
    <Application.Styles>
		<Style Selector="Window">
			<Setter Property="FontFamily" Value="resm:mclPlus.assets.font.ttf?assembly=mclPlus#MiSans"/>
		</Style>
		
		<sty:FluentAvaloniaTheme PreferUserAccentColor="True"/>
    </Application.Styles>
	<Application.Resources>
		<ResourceDictionary>
			<FontFamily x:Key="icon">resm:mclPlus.assets.icon.ttf?assembly=mclPlus#Segoe MDL2 Assets</FontFamily>
			<FontFamily x:Key="default">resm:mclPlus.assets.font.ttf?assembly=mclPlus#MiSans</FontFamily>
		</ResourceDictionary>
	</Application.Resources>
</Application>
